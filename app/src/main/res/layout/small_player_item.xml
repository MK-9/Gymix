<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="64dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgSrc"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="@dimen/normal_100"
        android:src="@drawable/album_cover"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/musicTitle"
        style="@style/TextAppearance.MaterialComponents.Headline6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_100"
        android:layout_marginEnd="@dimen/small_100"
        android:text="Pain"
        app:layout_constraintLeft_toRightOf="@+id/imgSrc"
        app:layout_constraintRight_toLeftOf="@+id/play"
        app:layout_constraintTop_toTopOf="@+id/imgSrc" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/musicDescription"
        style="@style/TextAppearance.MaterialComponents.Body2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_100"
        android:layout_marginEnd="@dimen/small_100"
        android:text="RYAN JONES"
        app:layout_constraintLeft_toRightOf="@+id/imgSrc"
        app:layout_constraintRight_toLeftOf="@+id/play"
        app:layout_constraintTop_toBottomOf="@+id/musicTitle" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/play"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="@dimen/normal_100"
        android:padding="@dimen/small_50"
        android:src="@drawable/ic_baseline_play_circle_filled_48"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>